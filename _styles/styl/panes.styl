
.logo.fade
  display: none
  left: 35px
  position: absolute
  top: 66px
  width: 186px

#intro .logo
  width: 523px
  margin-bottom: 62px
  margin-top: $top-margin - 56px

.poop:target .logo.small
  display: block

a
  color: $lightest-blue
  text-decoration: none
  transition: color 400ms ease
  &:hover
    color: $gold

h1.tagline
  font-size: 1.625em
  margin-bottom: 40px
  primary-type($serif, $bold)
  line-height: 1.154em

h2.subhead
  font-size: 1.375em
  margin-bottom: 40px
  primary-type($serif, $regular)
  font-style: italic
  line-height: 1.636em

p
  &.intro
    font-size: 1.125em
    primary-type($sans, $regular)
    line-height: 1.666em

  &.subhead
    font-size: 1.125em
    margin-bottom: 30px
    primary-type($serif, $regular)
    line-height: 1.666em

h3.headline
  font-size: 1.125em
  letter-spacing: 1px
  margin-bottom: 10px
  primary-type($sans, $regular)
  line-height: 1.333em
  text-transform: uppercase

.three li
  font-size: 1.125em
  primary-type($serif, $bold)
  line-height: 2em

  &.head
    font-size: 1.25em
    letter-spacing: 3px
    margin-bottom: 10px
    primary-type($serif, $bold)
    text-transform: uppercase

ul.reg li
  font-size: 1em
  primary-type($serif, $regular)
  line-height: 2em

.name
  opacity: 0

.staff
  height: 28vh
  position: relative

  img
    filter: grayscale(1)
    transition: filter 400ms ease
    z-index: 0

  & > a
    bottom: 0
    color: $white
    position: absolute

    &:hover

      img
        filter: grayscale(0)

      .name
        opacity: 1

  .name
    background-color: $dark-blue
    font-size: .8em
    height: 10px
    left: 36%
    letter-spacing: 2px
    padding: 4px 15px 14px 40px
    position: absolute
    primary-type($sans, $light)
    text-transform: uppercase
    top: -50px
    transition: opacity 400ms ease
    white-space: nowrap
    width: auto
    z-index: 9

    &.bottom
      bottom: 17px
      top: inherit

      &:before
        top: -16px
        transform: rotate(180deg)

    &:before
      background: url(../_images/pin.svg) no-repeat center left transparent
      content: ''
      display: block
      height: 50px
      left: -3px
      position: absolute
      top: -5px
      width: 50px

    &:hover
      background-color: $light-blue
      color: $white
      cursor: pointer

