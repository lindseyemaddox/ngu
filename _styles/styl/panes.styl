/* ---------- staff bios ---------- */

.bio
  margin: 40px 0 0 27px
  position: relative

  &:after
    clear: both
    content: ''
    display: block

  &:before
    background: url(../_images/pin.svg) no-repeat center left transparent
    content: ''
    display: block
    height: 50px
    left: -56px
    position: absolute
    top: -16px
    transform: rotate(-90deg)
    width: 50px

  h4.employee
    font-size: 0.9375em
    primary-type($sans, $semi-bold)
    letter-spacing: 3px
    line-height: 1.2em
    text-transform: uppercase

  h5.title
    font-size: 0.6875em
    primary-type($sans, $regular)
    letter-spacing: 1px
    line-height: 2.182em
    text-transform: uppercase

  a
    color: $white
    display: block
    font-size: 0.9375em
    primary-type($sans, $regular)
    line-height: 2em

    &:hover
      color: $lightest-blue

    &.email
      primary-type($sans, $bold)
      line-height: 2em

  .card
    float: left
    width: 32%

  .story
    float: left
    margin-left: 3%
    width: 65%

    p
      font-size: .9375em
      primary-type($serif, $regular)
      line-height: 1.6em
      padding-bottom: 20px
