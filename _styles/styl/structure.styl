
.overlay
  background-color: $darkest
  bottom: 0
  position: fixed
  top: 0
  width: 100vw
  z-index: -2

.background-video
  margin: 0 -11vw
  opacity: .25
  overflow-x: hidden
  position: fixed
  width: 122vw
  z-index: -1

  video
    width: 100%

.wrapper
  display: table
  height: 100vh
  width: 100vw

  .main
    display: table-row
    height: 100%

    aside
      display: table-cell
      height: 100vh
      min-width: 340px
      padding: $top-margin 30px 0
      position: fixed
      width: 340px

    section
      display: table-cell
      padding-left: 400px
      vertical-align: top
      width: 100%

.grid
  margin-left: 40px
  max-width: 930px

  @media screen and (max-width: 1200px)
  	max-width: 900px

.content
  overflow: hidden
  position: relative

.panes
  overflow-y: hidden
  transition: 800ms

.pane
  height: 100vh

#intro:target ~ .panes
  transform: translateY(0%)

#program:target ~ .panes
  transform: translateY(-100vh)

#people:target ~ .panes
  transform: translateY(-200vh)

#foundation:target ~ .panes
  transform: translateY(-300vh)

#perspective:target ~ .panes
  transform: translateY(-400vh)

#faq:target ~ .panes
  transform: translateY(-500vh)

#forms:target ~ .panes
  transform: translateY(-600vh)
