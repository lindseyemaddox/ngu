
.form-modal

  > p
    color: $medium-blue
    font-size: .8em
    margin-bottom: 30px
    primary-type($serif,$light)

  a.inline
    color: $light-blue
    display: inline
    font-style: inherit
    primary-type($serif,$light)

    &:hover
      color: $gold

  label,
  p.label
    font-size: .8em
    letter-spacing: 1px
    margin: 20px 0 2px
    primary-type($sans,$light)
    text-transform: uppercase

  input
    opacity: .6

  label, input
    color: $darkest-blue
    display: block
    padding: 0 0 2px

  input[type="submit"]
    background-image: linear-gradient($lightest-blue, $medium-blue)
    border: 1px solid transparent
    border-radius: 2px
    color: $white
    box-shadow: 2px 2px 10px rgba($darkest-blue, .8)
    letter-spacing: 2px
    margin: 30px auto 0
    opacity: 1
    padding: 7px
    primary-type($sans,$light)
    text-transform: uppercase
    width: 100%

    &:hover
      color: $gold
      border: 1px solid $gold
      primary-type($sans,$medium)

    &:active
      background-image: linear-gradient($medium-blue, $lightest-blue)
      border: 1px solid transparent
      color: $white
      primary-type($sans,$medium)

  textarea
    min-height: 60px

  input, textarea
    background: repeating-linear-gradient(135deg,rgba($gold,.2),rgba($gold,.2) 4px,rgba($gold,.1) 4px,rgba($gold,.1) 8px)
    border-bottom: 2px solid $white
    border-top: none
    border-left: none
    border-right: none
    box-sizing: border-box
    color: $dark-blue
    font-size: 1em
    opacity: 1
    padding: 6px 10px 3px
    primary-type($serif,$light)
    transition: all 600ms ease
    width: 100%

    &:focus, &:active
      background: rgba($gold, .1)
      border-bottom: 2px solid $light-blue
      border-top: none
      border-left: none
      border-right: none
      opacity: 1

    &:visited
      border-color: $light-blue
      opacity: .3

  input[type="radio"],
  label.radio
    display: inline
    margin-top: 10px
    width: auto

  input[type="radio"]
    box-shadow: 0px 0px 0px 1px rgba($darkest-blue .8)

  p
    color: $medium-blue
    margin: 20px 0 0
    padding: 0 0 2px

.form
  display: inline-block
  max-width: 200px
  vertical-align: top
  width: 45%

.other-contact
  color: $dark-blue
  display: inline-block
  float: right
  margin-top: 20px
  width: 50%

  p
    font-size: 1em
    padding-bottom: 20px
    primary-type($serif,$semi-bold)

  img
    margin-bottom: 50px
    width: 75%

#risk .modal-content
  margin: 0 auto
  min-width: 500px
  width: 40%

.toggle
  // transition: margin 1000ms ease

*:focus
  outline: none

p.smlabel,
label.smlabel
  color: $medium-blue
  font-size: .6em
  letter-spacing: 3px
  margin-top: 3px
  padding: 0 0 10px 3px
  primary-type($sans,$light)
  text-transform: uppercase

.school_district.hide
  height: 0
  margin: 0 24px
  opacity: 0
  overflow: hidden

.school_district
  height: 55px
  margin: 10px 24px
  opacity: 1
  transition: opacity 300ms ease, height 150ms ease

.school_district .smlabel
  font-size: .6em
  letter-spacing: 3px
  margin-top: 3px
  primary-type($sans,$light)
  text-transform: uppercase

.flex
  align-content: stretch
  display: flex
  flex-flow: row nowrap
  justify-content: space-between

.flexie

  input, .smlabel
    align-self: flex-start
    display: block

  &.state
    margin: 0 10px

.month
  min-width: 160px

.form-modal .riskform .select-box
  position: relative

  &__current
    position: relative
    box-shadow: 0 15px 30px -10px transparentize(#000, 0.9)
    cursor: pointer
    outline: none

    &:focus
      & + .select-box__list
        opacity: 1
        animation-name: none

        .select-box__option
          cursor: pointer

      .select-box__icon
        opacity: 0

  &__icon
    position: absolute
    top: 50%
    right: 15px
    transform: translateY(-50%)
    width: 20px
    opacity: 0.3
    transition: 0.2s ease

  &__value
    display: flex

  &__input
    display: none

    &:checked + .select-box__input-text
      color: $darkest-blue
      display: block

  &__input-text
    display: none
    width: 100%
    margin: 0
    padding: 8.5px 10px
    background: repeating-linear-gradient(135deg,rgba($gold,.2),rgba($gold,.2) 4px,rgba($gold,.1) 4px,rgba($gold,.1) 8px)
    color: $dark-blue

  &__list
    position: absolute
    width: 100%
    padding: 0
    list-style: none
    opacity: 0
    animation-name: HideList
    animation-duration: 0.5s
    animation-delay: 0.5s
    animation-fill-mode: forwards
    animation-timing-function: step-start
    box-shadow: 0 15px 30px -10px transparentize(#000, 0.9)

  &__option
    border: 2px solid transparent
    display: block
    font-size: 1em
    padding: 15px
    background-color: rgba($gold, .1)
    margin: 0 auto
    primary-type($sans,$light)
    transition: all 400ms ease

    &:hover,
    &:focus
      border: 2px solid $light-blue
      color: $dark-blue
      cursor: pointer
      background-color: rgba($gold, .025)

@keyframes HideList
  from
    transform: scaleY(1)

  to
    transform: scaleY(0)
