
.contact-modal

  > p
    color: $medium-blue
    font-size: .8em
    margin-bottom: 30px
    primary-type($serif,$light)

.form
  display: inline-block
  max-width: 200px
  vertical-align: top
  width: 45%

  label
    font-size: .8em
    letter-spacing: 1px
    margin: 20px 0 2px
    primary-type($sans,$light)
    text-transform: uppercase

  input
    opacity: .6

  label, input
    color: $darkest-blue
    display: block
    padding: 0 0 2px

  input[type="submit"]
    background-color: $darkest
    background-image: linear-gradient($dark-blue, $darkest-blue);
    border: 1px solid $gold
    border-radius: 2px
    color: $white
    box-shadow: 2px 2px 10px rgba($darkest-blue, .8)
    letter-spacing: 2px
    margin: 30px auto 0
    opacity: 1
    padding: 7px
    primary-type($sans,$light)
    text-transform: uppercase
    width: 100%

    &:hover
      background-color: $gold
      background-image: linear-gradient($gold, yellow);
      border-color: $darkest-blue
      color: $darkest-blue
      primary-type($sans,$medium)

    &:active
      background-color: $white
      background-image: none

  input, textarea
    border: 1px $darkest-blue solid
    box-sizing: border-box
    color: $dark-blue
    font-size: 1em
    opacity: .6
    padding: 7px
    primary-type($serif,$light)
    transition: all 800ms ease
    width: 100%

    &:focus, &:active
      border-color: $gold
      opacity: 1

    &:visited
      border-color: $light-blue
      opacity: .3

  p
    color: $medium-blue
    margin: 20px 0 0
    padding: 0 0 2px

.other-contact
  color: $dark-blue
  display: inline-block
  float: right
  margin-top: 20px
  width: 50%

  p
    font-size: 1em
    padding-bottom: 20px
    primary-type($serif,$semi-bold)

  img
    margin-bottom: 50px
    width: 75%
