
span.label
  color: $white
  font-size: .4em
  left: 60px
  letter-spacing: 2px
  position: absolute
  text-transform: uppercase
  top: 7px
  transition: all 300ms ease
  primary-type($sans,$bold)
  line-height: 1.1em

  &.multi
    top: 2px

[class^="icon-"], [class*=" icon-"]
  font-size: 2em
  padding: 0 0 40px
  position: relative
  text-decoration: none

li
  cursor: pointer
  opacity: 1
  transition: opacity 400ms ease

  a
    opacity: .2

    &:hover,
    &:hover span
      color: $medium-blue

  &.active span,
  &.active a,
  &:hover a
    opacity: 1
